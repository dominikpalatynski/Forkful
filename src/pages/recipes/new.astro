---
import DashboardLayout from "../../layouts/DashboardLayout.astro";
import { ManualRecipeForm } from "@/components/recipes/form/ManualRecipeForm";
---

<DashboardLayout title="Utwórz nowy przepis">
  <div class="min-h-screen bg-background">
    <div class="container mx-auto px-4 py-8">
      <div class="max-w-4xl mx-auto">
        <div class="mb-8">
          <h1 class="text-3xl font-bold text-foreground mb-2">Utwórz nowy przepis</h1>
          <p class="text-muted-foreground">
            Dodaj nazwę, opis, składniki, kroki przygotowania i tagi dla swojego przepisu.
          </p>
        </div>

        <div class="bg-card rounded-lg border p-6 shadow-sm">
          <ManualRecipeForm client:load />
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>
