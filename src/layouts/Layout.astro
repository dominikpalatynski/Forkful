---
// src/layouts/BaseLayout.astro
import "../styles/global.css";
import { NavigationMenuDemo } from "../components/marketing/NavBar";
import FooterSection from "../components/marketing/Footer";
interface Props {
  title?: string;
}

const { title = "Forkful" } = Astro.props as Props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <slot name="head" />
  </head>
  <body class="min-h-screen">
    <header class="flex justify-center items-center w-full py-4 sticky top-0 bg-background z-10">
      <NavigationMenuDemo client:load />
    </header>
    <slot />
    <FooterSection client:load />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
